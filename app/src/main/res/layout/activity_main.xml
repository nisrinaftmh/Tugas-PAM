<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/nilai1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:hint="Masukkan Bilangan Pertama"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/nilai2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:hint="Masukkan Bilangan Kedua"
            android:inputType="numberDecimal" />

        <RadioGroup
            android:id="@+id/radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radiotambah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint= "+"
                android:textSize="25sp"/>

            <RadioButton
                android:id="@+id/radiokurang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint= "-"
                android:textSize="25sp"/>

            <RadioButton
                android:id="@+id/radiokali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint= "x"
                android:textSize="25sp"/>

            <RadioButton
                android:id="@+id/radiobagi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint= "/"
                android:textSize="25sp"/>
    </RadioGroup>

    <Button
        android:id="@+id/buttonHitung"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:text="Hitung" />

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>